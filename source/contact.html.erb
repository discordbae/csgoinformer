<div class="container">
  <h1>Contact Us</h1>
  <p>
  Questions? Concerns? Compliments? Use the form below to send us a message,
  whatever the reason is!
  </p>

  <% form_tag "mailto:contact@csgoinformer.com", class: "contact-form" do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, rows: 10, cols: 20 %>
    </div>
  <% end %>
</div>
